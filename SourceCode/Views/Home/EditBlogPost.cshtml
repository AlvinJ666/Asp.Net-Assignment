@model Lab4_Cs.Models.BlogPost
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "EditBlogPost";
}


    <html>

    <body>
        <div class="page-header">
            @*display editing page header*@
            <br /><h4>Edit Blog Post</h4>
        </div>

        @*call function ModifyBlog in home controller to perform editting, method type is post*@
        <form method="post" asp-controller="Home" asp-action="ModifyBlog">
            @*hidden input field which fill the varible of BlogPostId*@
            <input type="hidden" value="@Model.BlogPostId" name="BlogPostId" />
            <div class="form-group">
                <label for="title">Blog Post Title</label>
                <div class="col-sm-8">
                    @*input updated blog title*@
                    <input class="form-control" id="title" name="Title" asp-for="Title" required>
                </div>
            </div>
            <div class="form-group">
                <label for="content">Blog Post Content</label>
                <div class="col-sm-8">
                    @*input updated blog content*@
                    <textarea class="form-control" id="content" rows="25" maxlength="4000" asp-for="Content" required></textarea>
                </div>
            </div>
            <br />
            <button type="submit" class="form-control">Edit Post</button>
        </form>
        <div>
            @*submit button to request action performed*@
            <a asp-action="Index">Back to Posts Home</a>
        </div>
    </body>

    </html>


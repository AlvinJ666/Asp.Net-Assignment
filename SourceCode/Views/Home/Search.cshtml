@model Lab4_Cs.Models.BlogPost
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Search";
}



@*add a header to page*@
<h1>Search A Blog</h1>

<html>

<body>
    <div class="page-header">
    </div>
    @*call showSearchResult function in Homecontroller to display searched results*@
    <form asp-controller="Home" asp-action="showSearchResult">
        <div class="form-group">
            <div class="col-sm-4">
                @*select search by blog title or blog content, by default by will return the most close results*@
                <select class="form-control" name="pre">
                    <option>Search by</option>
                    <option>title</option>
                    <option>content</option>
                </select>
            </div>
            <br />
            @*area for user to enter the key words for searching, store key words into the 'value' variable*@ 
            <div class="col-sm-8">
                <input class="form-control" name="value" placeholder="characters to search" required>
            </div>
        </div>
        <div class="form-group">
            @*submit button to request action performed*@
            <div class="col-sm-8">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
        <div>
            @*back to home page*@
            <a asp-action="Index">Back to Posts Home</a>
        </div>
    </form>
</body>

</html>
